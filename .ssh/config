Host thalia
  HostName localhost

# Firewalls and Forwarding
Host dionysus armstrong rubicon
  ForwardAgent yes
  ForwardX11 yes
  ForwardX11Trusted yes

# Other Forwarding
# Host 
#   ForwardAgent yes
#   ForwardX11 yes
