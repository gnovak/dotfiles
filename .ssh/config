NoHostAuthenticationForLocalhost yes

#### Testing for accessing clio from work
# This is necesssary if port is forwarded to localhost on lerma90 so
# that all port forwarded connections must originate from that same
# machine.
# Host clio2
#   ProxyCommand ssh lerma90.obspm.fr nc localhost 9022 2> /dev/null

# This works if the port is forwarded to lerma90, so that any machine
# can connect to it.
# Host clio3
#   HostName lerma90
#   Port 9022
  
##############
### Forwarding 

# Firewalls
Host dionysus armstrong rubicon
  ForwardAgent yes
  ForwardX11 yes
  ForwardX11Trusted yes

# Other Forwarding
Host sesame1 dionysus
  ForwardAgent yes
  ForwardX11 yes
  ForwardX11Trusted yes

##########################
### Machines behind firewalls.

# Paris 
Host aramis
  ProxyCommand ssh rubicon nc %h %p 2> /dev/null

Host lerma90
  ProxyCommand ssh aramis nc %h %p 2> /dev/null

# Princeton
Host sesame1 tigressdata oldhecate hecate
  ProxyCommand ssh armstrong nc %h %p 2> /dev/null

# UCSC
Host governator
  ProxyCommand ssh dionysus nc %h %p 2> /dev/null

# NASA
Host cfe1 cfe2 cfe3 lou1 lou2 lou3 pleiadesfe1
  ProxyCommand ssh gnovak@sfe2.nas.nasa.gov /usr/local/bin/ssh-proxy %h

Host pfe pfe-last
  ProxyCommand ssh gnovak@sfe1.nas.nasa.gov /usr/local/bin/ssh-balance %h
  HostKeyAlias pfe1.nas.nasa.gov
  HostbasedAuthentication no

